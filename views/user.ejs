<% include header.ejs%>
	<%posts.forEach(function(post,index){%>
		<p><h2><a href="/u/<%=post.name%>/<%=post.time.day%>/<%=post.title%>"><%=post.title%></a></h2>
				 <a href="/u/<%=post.name%>"><img src="<%=post.head%>" class="r_head" /></a>
		</p>
		<p class="info">
			作者：<a href="/u/<%=post.name%>"><%=post.name%></a> |
			日期:<%=post.time.minute%> |
			标签：
			<%if(post.tags){
				post.tags.forEach(function(tag,index){%>
				<%if(tag.tag){%>
					<a class="tag" href="/tags/<%=tag.tag%>"><%=tag.tag%></a>
				<%}%>
			<%});}%>
			<%if(post.reprint_info.reprint_from){%>
				<br><a href="/u/<%=post.reprint_info.reprint_from.name%>/<%=post.reprint_info.reprint_from.day%>/<%=post.reprint_info.reprint_from.title%>">转载</a>
			<%}%>
		</p>
		<p>
			<h4><%-post.post%><h4>
		</p>
		<p class="info">阅读：<%=post.pv%>次 | 
						评论：<%=post.comments.length%> |
						转载：<%if(post.reprint_info.reprint_to){%>
								<%=post.reprint_info.reprint_to.length%>次
							  <%}else{%>
								<%=0%>次
							  <%}%>
		</p>
		<font color="green">--------------------------------------------------</font>
	<%});%>
<% include paging.ejs%>
<% include footer.ejs%>